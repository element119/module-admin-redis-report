/** @see RedisInfo::get() */
$redisInfo = $block->getData('redis_info');
?>
<section id="connections">
    <h2><?= $escaper->escapeHtml(__('Connections')); ?></h2>
    <ul class="data-list">
        <?php foreach ($redisInfo['connections'] as $key => $value): ?>
            <li>
                <b><?= $escaper->escapeHtml(__($key)); ?>:</b>
                <?= $escaper->escapeHtml($value); ?>
            </li>
        <?php endforeach; ?>
    </ul>
</section>
